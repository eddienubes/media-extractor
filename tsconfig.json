{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "strictNullChecks": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "types": ["vitest/globals"],
    "paths": {
      "@libs/*": ["./libs/*"]
    }
  }
}
